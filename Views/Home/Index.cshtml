@using DestinoComum2.Models
@model IEnumerable<CidadeModel>

@{
    Layout = ViewBag.LayoutPagina;
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="py-5">
    <div class="container mt-2 mb-5">
        <!-- Adicione a classe mt-5 para uma margem superior -->
        <form method="get" asp-action="Index" asp-controller="Home" class="d-flex justify-content-center">
            <input name="pesquisar" class="form-control w-50 mx-2" style="border: 1px solid black; border-radius: 10px" />
            <button type="submit" class="btn btn-primary w-10" style="border-radius:10px">Pesquisar</button>
        </form>
    </div>


    <div class="row row-cols-1 row-cols-2 row-cols-md-3 g-0 mb-5">
        @if(Model != null)
        {
            if(Model.Count() > 0)
            {
                @foreach(var cidade in Model.ToList())
                {
                    <div class="card" style="width: 18rem; margin-left: 20px; margin-bottom: 20px">   
                        <img src="/Imagem/@cidade.Capa" class="card-img-top" style="width: 178px; height:250px"/>
                        <div>
                            <h5 class="card-title">@cidade.Nome</h5>
                            <p class="card-text">@cidade.TipoDestino</p>
                            <a class="btn btn-primary w-100" style="font-size: 16px" asp-action="Detalhes" asp-controller="Home" asp-route-id="@cidade.IdCidade">Detalhes</a>
                        </div>
                    
                    </div>

                }
            }
        }


    </div>
</div>
