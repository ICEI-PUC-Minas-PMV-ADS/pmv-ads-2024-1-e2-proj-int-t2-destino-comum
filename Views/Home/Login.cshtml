@using DestinoComum2.Dto.Home
@model LoginDto
<link rel="stylesheet" href="Login.css">
@{
    Layout = "_LayoutDeslogada";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>

}

<div class="welcome" style="width: 75rem; margin-top:10rem; background-color:#f9f9f9;margin-left:20rem; border-radius:5px; padding-top:1rem; padding-bottom:1rem; ">
    <p style=" display:flex; justify-content:center;align-content:center; font-size:4rem; font-weight:bold; color:black; border-radius:5px; margin-bottom:2px;">Bem vindo ao</p>
    <p style=" display:flex; justify-content:center;align-content:center; font-size:2rem; letter-spacing:4px; font-weight:400; color:black; border-radius:5px; ">Destino Comum</p>
</div>


<div class="container" style=" margin-top:3px; width: 75rem; background: #dfdfdf; color:black; font-size: 16px;padding: 70px; border-radius: 5px">
    <form method="post" asp-action="Login" asp-controller="Home">
        <div class="mb-3">
            <label class="form-label">E-mail</label>
            <input type="email" class="form-control" asp-for="Email" style="border-radius:5px;" />
            <span asp asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" asp-for="Senha" style="border-radius:5px;" />
            <span asp asp-validation-for="Senha" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <p class="form-label">Não tem conta ?<a asp-action="Cadastrar" asp-controller="Usuario" asp-route-id="1">Cadastre-se</a></p>
        </div>

        <button type="submit" class="btn btn-primary w-100" style="font-size: 16px ">Entrar</button>
    </form>


</div>