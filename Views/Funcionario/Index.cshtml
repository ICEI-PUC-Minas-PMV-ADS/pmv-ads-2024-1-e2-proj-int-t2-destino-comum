@using DestinoComum2.Models
@model IEnumerable<UsuarioModel>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Cadastro de Funcionários</h2>
        <a asp-controller="Usuario" asp-action="Cadastrar" class="btn-success btn"><i class="bi bi-plus-circle"></i>Cadastrar Novo Funcionário</a>
    </div>

    <table class="table table-hover" id="registros">
        <thead>
            <tr>
                <th></th>
                <th>Usuário</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Data de Criação</th>
                <th>CPF</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var clientes in Model)
                    {
                        <tr>

                            @if (clientes.Situacao == true)
                            {
                                <td>
                                    <img src="~/img/Ativo.png" style="width: 25px; height: 25px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                    <img src="~/img/Inativo.png" style="width: 25px; height: 25px" />
                                </td>
                            }


                            <td>@clientes.Usuario</td>
                            <td>@clientes.NomeCompleto</td>
                            <td>@clientes.Email</td>
                            <td>@clientes.DataCadastro</td>
                            <td>@clientes.CPF</td>
                            <td>
                                <a asp-controller="Usuario" asp-action="Detalhes" asp-route-id="@clientes.Id" class="btn-info btn"><i class="bi bi-file-earmark-zip"></i>Detalhes</a>
                                <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@clientes.Id" class="btn-warning btn"><i class="bi bi-pencil"></i>Editar</a>

                            </td>


                        </tr>


                    }
                }

                else
                {
                    <tr><td colspan="7" class="text-center">Sem Funcionários Cadastrados</td></tr>
                }
            }




        </tbody>

    </table>



</div>