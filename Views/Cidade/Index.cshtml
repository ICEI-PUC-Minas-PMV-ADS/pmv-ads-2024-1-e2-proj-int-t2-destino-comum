@model IEnumerable<CidadeModel>

<div class="container">
    <div class="d-flex justify-content-between align-itens-center mb-5">
        <h1>Cadastro de Cidades</h1>
        <a class="btn btn-success mx-2" asp-controller="Cidade" asp-action="Cadastrar">Cadastrar Nova Cidade</a> 
    </div>

    <table id="Cidades" class="table table-hover">
    
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">País</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Tipo de Destino</th>
                    <th scope="col">Data da Ultima Atualização</th>
                    <th scope="col">Clima</th>
                    <th scope="col">Ponto Turístico</th>
                    <th scope="col">Alimentação</th>
                    <th scope="col">Transporte</th>
                    <th scope="col">Acessibilidade</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if(Model !=null)
                {
                    @foreach(var cidade in Model)
                    {
                    <tr>
                            <th scope="row">@cidade.IdCidade</th>
                            <td>@cidade.Nome</td>
                            <td>@cidade.Pais</td>
                            <td>@cidade.Descricao</td>
                            <td>@cidade.TipoDestino</td>
                            <td>@cidade.DataUltimaAtualizacao</td>
                            <td>@cidade.Clima</td>
                            <td>@cidade.PontoTuristico</td>
                            <td>@cidade.Alimentacao</td>
                            <td>@cidade.Transporte</td>
                            <td>@cidade.Acessibilidade</td>
                            <td>
                                <a asp-controller="Cidade" asp-action="Editar" asp-route-id="@cidade.IdCidade" class="btn btn-warning mx-2">Editar</a>
                                <a asp-controller="Cidade" asp-action="Excluir" asp-route-id="@cidade.IdCidade" class="btn btn-danger mx-2">Excluir</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

    </table>
</div>