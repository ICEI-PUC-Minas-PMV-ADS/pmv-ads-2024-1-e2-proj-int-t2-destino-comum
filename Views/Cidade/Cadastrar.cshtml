@using DestinoComum2.Dto
@model CidadeCriacaoDto

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-5">
    <form method="post" asp-action="Cadastrar" asp-controller="Cidade" enctype="multipart/form-data">

        <h2 style="display:flex; justify-content:center; align-items:center; font-size:3rem; font-weight:bold; margin-bottom:5rem;">Cadastro de Cidades</h2>

        <div class="text-center">
            <label for="ImageFile" >
                <img id="img" style="width: 300px; height:250px;"></<img>
            </label>

        </div>

        <div class="mb-1">
            <label class="form-label mt-3" >Capa</label>
            <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" style=" background: #dfdfdf; border-radius:5px;   " />
        </div>

        <div class="col-12 d-flex gap-1 w-100" >
            <div class="mb-1 col-6" >
                <label class="form-label mt-3">Nome</label>
                <input type="text" style=" background: #dfdfdf; border-radius:5px; color:black; font-weight:800; font-size:1.2rem; " class="form-control shadow-none" asp-for="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-1 col-6">
                <label class="form-label mt-3">País</label>
                <input type="text" style=" background: #dfdfdf; border-radius:5px; color:black; font-weight:800; font-size:1.2rem;  " class="form-control shadow-none" asp-for="Pais" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-1">
            <label class="form-label mt-3">Descrição</label>
            <textarea asp-for="Descricao" style=" background: #dfdfdf; border-radius:5px; color:black; font-weight:800; font-size:1.2rem;  " class="form-control shadow-none"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="mb-1">
            <label class="form-label mt-3">Tipo de Destino</label>
            <input type="text" style=" background: #dfdfdf; border-radius:5px; color:black; font-weight:800; font-size:1.2rem;  " class="form-control shadow-none" asp-for="TipoDestino" />
            <span asp-validation-for="TipoDestino" class="text-danger"></span>
        </div>

        <div class="btn-box d-flex mt-3">
            <a type="submit" class="btn btn-info w-50 mx-1" asp-action="Index" asp-controller="Cidade"><i class="bi bi-arrow-left-circle"></i>Voltar</a>
            <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i>Cadastrar</button>
        </div>
    </form>
</div>




<script>
    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");

                img.src = readerTarget.result;
            });

            reader.readAsDataURL(file);
        }
    });
</script>
